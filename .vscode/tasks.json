{
	// Read .vscode/DEBUGGER.md for more information on how to use this file.
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start All",
			"type": "shell",
			"command": "pnpm",
			"args": ["start"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": "(n8n ready on|Editor is now accessible)"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "n8n-servers"
			}
		},
		{
			"label": "Start Frontend",
			"type": "shell",
			"command": "pnpm",
			"args": ["serve"],
			"options": {
				"cwd": "${workspaceFolder}/packages/frontend/editor-ui"
			},
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*",
					"endsPattern": "(ready in [0-9]+\\s?ms|âžœ\\s+Local:\\s+http://localhost:8080)"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"group": "n8n-servers"
			}
		},
		{
			"label": "Debug All (Production)",
			"dependsOn": [
				"Start All",
				"Start Frontend"
			],
			"dependsOrder": "parallel",
			"problemMatcher": []
		}
	]
}